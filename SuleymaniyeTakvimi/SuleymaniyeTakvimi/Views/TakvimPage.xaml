                    <!--</yummy:PancakeView>
        </yummy:PancakeView>-->
                <Label Text="Fecri Sadık:" HorizontalOptions="StartAndExpand" Grid.Row="1" Grid.Column="0" TextColor="Orange"  FontAttributes="Bold" FontSize="Large"/>
                    <Label Text="{Binding Vakitler.FecriSadik}" HorizontalOptions="StartAndExpand" Grid.Row="1" Grid.Column="1" TextColor="Orange"  FontAttributes="Bold" FontSize="Large"/>
                    <Label Text="Sabah Sonu:" HorizontalOptions="StartAndExpand" Grid.Row="2" Grid.Column="0" TextColor="Gray"  FontAttributes="Bold" FontSize="Large"/>
                    <Label Text="{Binding Vakitler.SabahSonu}" HorizontalOptions="StartAndExpand" Grid.Row="2" Grid.Column="1" TextColor="Gray"  FontAttributes="Bold" FontSize="Large"/>
                    <Label Text="Öğle:" HorizontalOptions="StartAndExpand" Grid.Row="3" Grid.Column="0" TextColor="LimeGreen"  FontAttributes="Bold" FontSize="Large"/>
                    <Label Text="{Binding Vakitler.Ogle}" HorizontalOptions="StartAndExpand" Grid.Row="3" Grid.Column="1" TextColor="LimeGreen"  FontAttributes="Bold" FontSize="Large"/>
                    <Label Text="İkindi" HorizontalOptions="StartAndExpand" Grid.Row="4" Grid.Column="0" TextColor="Blue"  FontAttributes="Bold" FontSize="Large"/>
                    <Label Text="{Binding Vakitler.Ikindi}" HorizontalOptions="StartAndExpand" Grid.Row="4" Grid.Column="1" TextColor="Blue"  FontAttributes="Bold" FontSize="Large"/>
                    <Label Text="Akşam:" HorizontalOptions="StartAndExpand" Grid.Row="5" Grid.Column="0" TextColor="Orange"  FontAttributes="Bold" FontSize="Large"/>
                    <Label Text="{Binding Vakitler.Aksam}" HorizontalOptions="StartAndExpand" Grid.Row="5" Grid.Column="1" TextColor="Orange"  FontAttributes="Bold" FontSize="Large"/>
                    <Label Text="Yatsı:" HorizontalOptions="StartAndExpand" Grid.Row="6" Grid.Column="0" TextColor="Gray"  FontAttributes="Bold" FontSize="Large"/>
                    <Label Text="{Binding Vakitler.Yatsi}" HorizontalOptions="StartAndExpand" Grid.Row="6" Grid.Column="1" TextColor="Gray"  FontAttributes="Bold" FontSize="Large"/>
                    <Label Text="Yatsı Sonu:" HorizontalOptions="StartAndExpand" Grid.Row="7" Grid.Column="0" TextColor="LimeGreen"  FontAttributes="Bold" FontSize="Large"/>
                    <Label Text="{Binding Vakitler.YatsiSonu}" HorizontalOptions="StartAndExpand" Grid.Row="7" Grid.Column="1" TextColor="LimeGreen"  FontAttributes="Bold" FontSize="Large"/>
                    <BoxView VerticalOptions="Center" HorizontalOptions="Center" HeightRequest="1" WidthRequest="Infinity" Color="DarkGray" Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="2"></BoxView>
                    <Label Text="{Binding Vakitler.Enlem, StringFormat='Enlem: {0}'}" HorizontalOptions="StartAndExpand" Grid.Row="9" Grid.Column="0" TextColor="LimeGreen"/>
                    <Label Text="{Binding Vakitler.Boylam, StringFormat='Boylam: {0}'}" HorizontalOptions="StartAndExpand" Grid.Row="9" Grid.Column="1" TextColor="LimeGreen"/>
                    <Label Text="{Binding Vakitler.Yukseklik, StringFormat='Yükseklik: {0}'}" HorizontalOptions="StartAndExpand" Grid.Row="10" Grid.Column="0" TextColor="LimeGreen"/>
                    <Label Text="{Binding Vakitler.SaatBolgesi, StringFormat='Saat Bölgesi: GMT {0}'}" HorizontalOptions="StartAndExpand" Grid.Row="10" Grid.Column="1" TextColor="LimeGreen"/>
                </Grid>
            </Frame>    
