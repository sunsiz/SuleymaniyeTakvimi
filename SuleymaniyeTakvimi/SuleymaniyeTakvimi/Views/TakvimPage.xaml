    </shades:Shadows>

    <shades:Shadows Grid.Row="1"
                Grid.Column="1"
                CornerRadius="10"
                Shades="{shades:NeumorphismShades}">
        <Button Style="{StaticResource TextHeadline}"
                WidthRequest="120"
                HeightRequest="60"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                BackgroundColor="#F0F0F3"
                CornerRadius="10"
                Text="Reset"
                TextColor="Gray" />
    </shades:Shadows>-->
            <!--<StackLayout>
                <ActivityIndicator IsVisible="{Binding  IsBusy}" IsRunning="{Binding IsBusy}" Scale="4" VerticalOptions="CenterAndExpand" Color="Black" />
            </StackLayout>-->
        </Grid>

</ContentPage>
